<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Splash">

    <!--on below line we are adding an image view-->

    <!--on below line we are creating progress bar-->

    <ImageView
        android:id="@+id/idIVLogo"
        android:layout_width="86dp"
        android:layout_height="68dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/blue"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ProgressBar
        android:id="@+id/idPBLoading"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/idIVLogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="188dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="136dp"
        android:foregroundGravity="center_horizontal"
        android:indeterminateTint="#00B0FF" />

    <TextView
        android:id="@+id/txt_up"
        android:layout_width="361dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="211dp"
        android:gravity="center_horizontal"
        android:text="Nila Apps Internship"
        android:textColor="#126287"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.67"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <TextView
        android:id="@+id/txt_down"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="699dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="-2dp"
        android:gravity="center_horizontal"
        android:text="Version 1.0.1"
        android:textColor="#673AB7"
        android:textFontWeight="1000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.67"
        tools:ignore="HardcodedText,UnusedAttribute" />

</RelativeLayout>
